<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Editing book</h1>

      <%= form_with model:@book, local: true do |f| %>
      <p>Title</p><br>
      <%= f.text_field :title %><br>

      <p>Opinion</p><br>
      <%= f.text_area :body %><br>

      <%= f.submit 'Update Book' %>

      <% end %>

      <%= link_to 'Show', user_path(@book) %>|<%= link_to 'Back', books_path %>

    </div>
  </div>
</div>