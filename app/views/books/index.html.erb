<div class="container">
  <div class="row">

    <div class="col-md-3">
      <h1>User info</h1>
      <table>
        <tr>profile_image</tr>
        <tr>
          <th>name</th>
          <td>user_name</td>
        </tr>
        <tr>
          <th>introduction</th>
          <td>user_introduction</td>
        </tr>
      </table>

      <div class="edit-profile">Edit</div>

      <div class="new-book">
        <h1>New book</h1>
        <%= form_with model:@book, local: true do |f| %>
          <h4>Title</h4><br>
          <%= f.text_field :title %><br>

          <h4>Opinion</h4><br>
          <%= f.text_area :body %><br>

          <%= f.submit 'Create Book' %>
        <% end %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td>profile_image</td>
          <td><%= link_to "#{book.title}", book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>

  </div>
</div>
