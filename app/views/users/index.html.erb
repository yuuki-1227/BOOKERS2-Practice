<div class="container">
  <div class="row">

    <div class="col-md-3">
      <h1>User info</h1>
      <table>
        <tr><%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: 'no_image.jpg' %></tr>
        <tr>
          <th>name</th>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= current_user.introduction %></td>
        </tr>
      </table>

      <div class="edit-profile">
        <%= link_to 'Edit', edit_user_path(current_user) %>
      </div>

      <div class="new-book">
        <h1>New book</h1>
        <%= form_with model:@book, local: true do |f| %>
          <h4>Title</h4><br>
          <%= f.text_field :title %><br>

          <h4>Opinion</h4><br>
          <%= f.text_area :body %><br>

          <%= f.submit 'Create Book' %>
        <% end %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table>
        <tr>
          <th>image</th>
          <th>name</th>
        </tr>
        <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user,:profile_image, :fill, 60, 60, fallback: "no_image.jpeg" %></td>
          <td><%= user.name %></td>
          <td><%= link_to 'Show', user_path(user) %></td>
        </tr>
        <% end %>
      </table>
    </div>

  </div>
</div>